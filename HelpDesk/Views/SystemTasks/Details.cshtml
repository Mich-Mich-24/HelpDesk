@model HelpDesk.Models.SystemTask

@{
    ViewData["Title"] = "Details";
}

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">System Task Details</h6>
        </div>
        <hr />
        <div class="row">
            <table class="table table-bordered table-hover table-responsive-lg">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                    <td>@Html.DisplayFor(model => model.Code)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Parent)</th>
                    <td>@Html.DisplayFor(model => model.Parent.Id)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OrderNumber)</th>
                    <td>@Html.DisplayFor(model => model.OrderNumber)</td>
                </tr>
            </table>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
