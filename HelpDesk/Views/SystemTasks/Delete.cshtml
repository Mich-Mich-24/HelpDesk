@model HelpDesk.Models.SystemTask

@{
    ViewData["Title"] = "Delete";
}

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Delete System Task</h6>
        </div>
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <div class="row">
            <table class="table table-bordered table-hover table-responsive-lg">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                    <td>@Html.DisplayFor(model => model.Code)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Parent)</th>
                    <td>@Html.DisplayFor(model => model.Parent.Name)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OrderNumber)</th>
                    <td>@Html.DisplayFor(model => model.OrderNumber)</td>
                </tr>
            </table>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
