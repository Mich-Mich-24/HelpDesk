@model HelpDesk.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Delete Department</h6>
        </div>
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <div class="row">
            <table class="table table-bordered table-hover table-responsive-lg">
                <thead>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Code)</th>
                        <th class="col-sm-10">@Html.DisplayFor(model => model.Code)</th>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</th>
                        <th class="col-sm-10">@Html.DisplayFor(model => model.Name)</th>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedBy)</th>
                        <th class="col-sm-10">@Html.DisplayFor(model => model.CreatedBy.Id)</th>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedOn)</th>
                        <th class="col-sm-10">@Html.DisplayFor(model => model.CreatedOn)</th>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.ModifiedBy)</th>
                        <th class="col-sm-10">@Html.DisplayFor(model => model.ModifiedBy.Id)</th>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.ModifiedOn)</th>
                        <th class="col-sm-10">@Html.DisplayFor(model => model.ModifiedOn)</th>
                    </tr>
                </thead>
            </table>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
