@model IEnumerable<HelpDesk.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Department</h6>
        </div>

        <p>
            <a class="btn btn-primary" asp-action="Create">Add New  Department</a>
        </p>

        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Code)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CreatedBy)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CreatedOn)</th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Code)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedBy.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedOn)</td>
                        <td>

                            <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a>

                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                        </td>
                        <td>

                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
