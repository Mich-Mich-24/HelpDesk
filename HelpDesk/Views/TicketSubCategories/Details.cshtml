            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.Category)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Category.Id)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.Code)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Code)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</th>
