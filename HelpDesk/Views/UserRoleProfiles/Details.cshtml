@model HelpDesk.Models.UserRoleProfile

@{
    ViewData["Title"] = "Details";
}

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Role Profile Details</h6>
        </div>
        <hr />
        <div class="row">
            <table class="table table-bordered table-hover table-responsive-lg">
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <td class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Task)
                    </th>
                    <td class="col-sm-10">
                        @Html.DisplayFor(model => model.Task.Name)  <!-- Display Task Name -->
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <td class="col-sm-10">
                        @Html.DisplayFor(model => model.Role.Name)  <!-- Display Role Name -->
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <td class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedBy.FullName)
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <td class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedOn)
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ModifiedBy)
                    </th>
                    <td class="col-sm-10">
                        @Html.DisplayFor(model => model.ModifiedBy.FullName)
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </th>
                    <td class="col-sm-10">
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
