@model HelpDesk.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "User Rights";
    var id = ViewContext.RouteData.Values["id"];
}

<div class="card rounded-4">
    <div class="card-body">
        <form asp-action="UserRights" method="post">
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="RoleId" class="control-label">Role</label>
                    <div class="row">
                        <div class="col-md-6">
                            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId">
                                <option value="">Select Role</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 mt-3">
                    <div id="tree">
                        <input type="checkbox" id="selectAll" />
                        <label for="selectAll"><strong> Select All</strong></label>
                        <ul id="treeData" style="list-style-type: none; padding-left: 20px;">
                            @foreach (var item in Model.SystemTasks)
                            {
                                <li>
                                    <input type="checkbox" class="task-checkbox" id="task_@item.Id" name="Ids[]" value="@item.Id"
                                    @(Model.RightsIdsAssigned.Contains(item.Id) ? "checked" : "") />
                                    <label for="task_@item.Id">@item.Name</label>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const selectAll = document.getElementById("selectAll");
        const checkboxes = document.querySelectorAll(".task-checkbox");

        selectAll.addEventListener("change", function () {
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });
        });
    });
</script>
