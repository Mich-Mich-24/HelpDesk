@model HelpDesk.Models.SystemSetting

@{
    ViewData["Title"] = "Details";
}

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">System Setting Details</h6>
        </div>
        <hr />
        <div class="row">
            <table class="table table-bordered table-hover table-responsive-lg">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.Code)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Value)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.Value)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.CreatedBy.Id)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ModifiedBy)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.ModifiedBy.Id)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ModifiedOn)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.ModifiedOn)</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
