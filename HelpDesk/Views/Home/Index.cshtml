@model IEnumerable<HelpDesk.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
}



<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3 class="text-light">@(ViewData["NewTickets"] ?? 0)</h3>
                <p class="text-light">New Tickets</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag text-light"></i>
            </div>
            <a asp-controller="Tickets" asp-action="Index" class="small-box-footer text-light">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3 class="text-light">@(ViewData["ResolvedTickets"] ?? 0)</h3>
                <p class="text-light">Resolved Tickets</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars text-light"></i>
            </div>
            <a asp-controller="Tickets" asp-action="ResolvedTickets" class="small-box-footer text-light">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3 class="text-light">@(ViewData["UserRegistrations"] ?? 0)</h3>
                <p class="text-light">User Registrations</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add text-light"></i>
            </div>
            <a asp-controller="Users" asp-action="Index" class="small-box-footer text-light">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3 class="text-light">@(ViewData["UniqueVisitors"] ?? 0)</h3>
                <p class="text-light">Active Users</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph text-light"></i>
            </div>
            <a asp-controller="Users" asp-action="Index" class="small-box-footer text-light">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div> 
<div class="container">
    <div class="row">
        <!-- First Card Column -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Tickets by Category</h5>
                </div>
                <div class="card-body">
                    <div id="container1" class="chart-container"></div>
                </div>
            </div>
        </div>

        <!-- Second Card Column -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Tickets by Priority</h5>
                </div>
                <div class="card-body">
                    <div id="container2" class="chart-container"></div>
                </div>
            </div>
        </div>

        <!-- Third Card Column -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Tickets by Sub-Category</h5>
                </div>
                <div class="card-body">
                    <div id="container3" class="chart-container"></div>
                </div>
            </div>
        </div>

        <!-- Fourth Card Column -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Tickets by Status</h5>
                </div>
                <div class="card-body">
                    <div id="container4" class="chart-container"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Recent Tickets</h6>
        </div>

        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Priority)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
                        <th>No Of Comments</th>
                        <th>Comments</th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var statusClass = "status-default";
                        if (item.Status.Code == "Resolved") statusClass = "status-resolved";
                        else if (item.Status.Code == "Escalated") statusClass = "status-escalated";
                        else if (item.Status.Code == "InProgress") statusClass = "status-inprogress";
                        else if (item.Status.Code == "Closed") statusClass = "status-closed";
                        else if (item.Status.Code == "AwaitingAssignment") statusClass = "status-awaitingassignment";

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Priority.Description)</td>
                            <td class="@statusClass">@Html.DisplayFor(modelItem => item.Status.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedBy.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedOn)</td>
                            <td class="text-center">
                                <a asp-action="TicketsComments" asp-controller="Comments" asp-route-id="@item.Id">
                                    @item.TicketComments.Count()
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-secondary" asp-action="TicketsComments" asp-controller="Comments" asp-route-id="@item.Id">
                                    <i class="fa fa-comments"></i> Comments
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-controller="Tickets" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fa fa-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/series-label.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/highcharts-3d.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>



<script type="text/javascript">
    $(document).ready(function () {
        // Parse JSON data from server (already serialized in controller)
        var categoryData = @Html.Raw(ViewData["TicketsByCategoryJson"] ?? "[]");
        var priorityData = @Html.Raw(ViewData["TicketsByPriorityJson"] ?? "[]");
        var subCategoryData = @Html.Raw(ViewData["TicketsBySubCategoryJson"] ?? "[]");
        var statusData = @Html.Raw(ViewData["TicketsByStatusJson"] ?? "[]");
        
        // Parse if strings, or use directly if already objects
        if (typeof categoryData === 'string') {
            categoryData = JSON.parse(categoryData);
        }
        if (typeof priorityData === 'string') {
            priorityData = JSON.parse(priorityData);
        }
        if (typeof subCategoryData === 'string') {
            subCategoryData = JSON.parse(subCategoryData);
        }
        if (typeof statusData === 'string') {
            statusData = JSON.parse(statusData);
        }

        // FIRST CHART - Tickets by Category (3D Pie)
        if (categoryData && categoryData.length > 0) {
            Highcharts.chart('container1', {
                chart: {
                    type: 'pie',
                    options3d: {
                        enabled: true,
                        alpha: 45,
                        beta: 0
                    }
                },
                title: { text: '' },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        depth: 35,
                        dataLabels: {
                            enabled: true,
                            format: '{point.name}: {point.y}'
                        }
                    }
                },
                series: [{
                    type: 'pie',
                    name: 'Tickets',
                    data: categoryData
                }]
            });
        } else {
            $('#container1').html('<p class="text-muted text-center p-4">No data available</p>');
        }

        // SECOND CHART - Tickets by Priority (Column)
        if (priorityData && priorityData.length > 0) {
            Highcharts.chart('container2', {
                chart: { type: 'column' },
                title: { text: '' },
                xAxis: {
                    categories: priorityData.map(x => x.name)
                },
                yAxis: {
                    allowDecimals: false,
                    min: 0,
                    title: { text: 'Number of Tickets' }
                },
                tooltip: {
                    pointFormat: '<b>{point.y}</b> tickets'
                },
                plotOptions: {
                    column: { colorByPoint: true }
                },
                series: [{
                    name: 'Tickets',
                    data: priorityData.map(x => x.y)
                }]
            });
        } else {
            $('#container2').html('<p class="text-muted text-center p-4">No data available</p>');
        }

        // THIRD CHART - Tickets by Sub-Category (Line)
        if (subCategoryData && subCategoryData.length > 0) {
            Highcharts.chart('container3', {
                chart: { type: 'line' },
                title: { text: '' },
                xAxis: {
                    categories: subCategoryData.map(x => x.name)
                },
                yAxis: {
                    allowDecimals: false,
                    min: 0,
                    title: { text: 'Number of Tickets' }
                },
                tooltip: {
                    pointFormat: '<b>{point.y}</b> tickets'
                },
                plotOptions: {
                    line: {
                        dataLabels: { enabled: true }
                    }
                },
                series: [{
                    name: 'Tickets',
                    data: subCategoryData.map(x => x.y)
                }]
            });
        } else {
            $('#container3').html('<p class="text-muted text-center p-4">No data available</p>');
        }

        // FOURTH CHART - Tickets by Status (Pie)
        if (statusData && statusData.length > 0) {
            const colors = Highcharts.getOptions().colors.map((c, i) =>
                Highcharts.color(Highcharts.getOptions().colors[0])
                    .brighten((i - 3) / 7)
                    .get()
            );
            
            Highcharts.chart('container4', {
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
                },
                title: { text: '' },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        colors: colors,
                        borderRadius: 5,
                        dataLabels: {
                            enabled: true,
                            format: '<b>{point.name}</b><br>{point.y} ({point.percentage:.1f}%)'
                        }
                    }
                },
                series: [{
                    name: 'Tickets',
                    data: statusData
                }]
            });
        } else {
            $('#container4').html('<p class="text-muted text-center p-4">No data available</p>');
        }
    });
</script>