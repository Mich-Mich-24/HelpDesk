@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "System Roles";
}

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">System Roles</h6>
        </div>
        <p>
            <a asp-action="Create" class="btn btn-primary">Add New Role</a>
        </p>
        <table class="table table-bordered table-hover table-responsive-lg">
            <thead class="table-light">
                <tr>
                    <th>Role No</th>
                    <th>Role Name</th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id" aria-label="View @item.Name Role">View</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" aria-label="Edit @item.Name Role">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" aria-label="Delete @item.Name Role">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
